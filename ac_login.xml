<?xml version="1.0" encoding="utf-8"?>


<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBlock1"
        android:background="#55484d97"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="30%" />

    <ImageView
        android:id="@+id/imgBlock2"
        android:layout_toRightOf="@id/imgBlock1"
        android:background="#55c91c4a"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="70%" />

    <ImageView
        android:id="@+id/imgBlock3"
        android:layout_below="@id/imgBlock2"
        android:background="#554d8e24"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/txtBlock1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBlock3"
        android:background="#222222"
        android:padding="20dp"
        android:text="超有事旁白"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="60sp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/imgBlock4"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtBlock1"
        android:background="#55484d97"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="30%" />

    <ImageView
        android:id="@+id/imgBlock5"
        android:layout_below="@id/txtBlock1"
        android:layout_toLeftOf="@id/imgBlock4"
        android:background="#55c91c4a"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="70%" />

    <ImageView
        android:id="@+id/imgBlock6"
        android:layout_below="@id/imgBlock5"
        android:background="#554d8e24"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_login_google_sign_in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/txtBlock1"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="50%"
        app:layout_marginTopPercent="5%"
        />


</android.support.percent.PercentRelativeLayout>



